<Window x:Class="OOPVehicles.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOPVehicles"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
            <StackPanel Margin="10">
               
                <TextBox Name="tbModel" Text="Model" Margin="0,5"/>
                <TextBox Name="tbYear" Text="Year" Margin="0,5"/>
                <TextBox Name="tbRegistrationNumber" Text="Registration Number" Margin="0,5"/>
                <ComboBox Name="cbVehicleType" Margin="0,5">
                    <ComboBoxItem Content="Car"/>
                    <ComboBoxItem Content="Bus"/>
                    <ComboBoxItem Content="Motorcycle"/>
                </ComboBox>
                <TextBox Name="tbSpecific" Text="Number of Doors/Capacity/Engine Capacity" Margin="0,5"/>
                <Button Content="Add Vehicle" Click="btnAddVehicle_Click" Margin="0,5"/>
                <Button Content="Show List" Click="btnShowList_Click" Margin="0,5"/>
                <Button Content="Save to File" Click="btnSaveToFile_Click" Margin="0,5"/>
                <ListBox Name="lbVehicleList" Margin="0,5"/>
            </StackPanel>
        </Grid>

    </Window>
